<ul class="media-list">
	<% debugFlag = 0 %>
	<% if debugFlag == 1 %>
		<p><%= p "# It is shown by \"app/views/tasks/_tasks.html.erb\"" %></p>
	<% end %>
	<table class="table table-striped">
		<thead>
			<tr>
				<th>id</th>
				<th>タスク</th>
				<th>状態</th>
				<th>編集</th>
				<th>削除</th>
				<% if debugFlag == 1 %>
					<th>chk</th>
				<% end %>
			</tr>
		</thead>
		<tbody>
			<% tasks.each do |task| %>
				<tr>
					<% if current_user == task.user %>
						<td><%= link_to task.id, task %></td>
					<% else %>
						<td><%= task.id %></td>
					<% end %>
					<td><%= task.content %></td>
					<td><%= task.status %></td>
					<% if current_user == task.user %>
						<td><%= link_to "Edit", edit_task_path(task), class: 'btn btn-default btn-xs' %></td>
						<td><%= link_to "Delete", task, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-xs' %></td>
					<% else %>
						<td>-</td>
						<td>-</td>
					<% end %>
					<% if debugFlag == 1 %>
						<td><%= task %></td>
					<% end %>
				</tr>
			<% end %>
		</tbody>
	</table>
			
	<%= paginate tasks %>
	<%#= paginate @user.tasks %>
</ul>
